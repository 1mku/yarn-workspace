{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"files": {
		"include": ["**/*.ts", "**/*.tsx"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": {
					"fix": "safe",
					"level": "error"
				}
			},
			"a11y": { "useValidAnchor": "warn" }
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	}
}
